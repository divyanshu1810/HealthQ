{
    "compilerOptions": {
      "target": "es2017",
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "module": "commonjs",
      "strict": true,
      "pretty": true,
      "sourceMap": true,
      "outDir": "./build",
      "jsx": "react-jsx",
      "allowJs": true,
      "noEmit": false,
      "esModuleInterop": true,
      "baseUrl": ".",
      "paths": {
        "~/*": ["./*"]
  
      }
    },
    "exclude": ["tests", "build", "node_modules"],
    "include": ["./**/*"]
  }